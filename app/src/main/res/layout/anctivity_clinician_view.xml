<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:layout_marginTop="-200dp"
        android:padding="30dp"
        android:alpha=".4"
        android:contentDescription="@string/severity_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pic" />

    <EditText
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="600dp"
        android:hint="Name"
        android:inputType="none"
        tools:ignore="autoFill"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp" />

    <EditText
        android:id="@+id/last_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="600dp"
        android:hint="Date of Last Use"
        android:inputType="none"
        tools:ignore="autoFill"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="116dp" />

    <EditText
        android:id="@+id/clean_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="600dp"
        android:hint="Number of Clean Days"
        android:inputType="none"
        tools:ignore="autoFill"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="58dp" />

    <EditText
        android:id="@+id/date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="Pick a month for compliance"
        android:inputType="date"
        android:textColor="@color/text_regular"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="99"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_use"
        tools:ignore="Autofill" />

</android.support.constraint.ConstraintLayout>
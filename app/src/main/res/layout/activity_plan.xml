<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <TextView
        android:id="@+id/textview_day_4"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:background="@color/res_green_transparent"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textview_day_3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_day_1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        android:background="@color/res_green_transparent"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textview_day_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_day_2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="3dp"
        android:background="@color/res_green_transparent"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/center"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="25dp"
        android:layout_height="31dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/plan_next_week"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/day_of_week_2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_day_2"
        app:layout_constraintEnd_toStartOf="@+id/center" />

    <TextView
        android:id="@+id/day_of_week_1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_day_1"
        app:layout_constraintEnd_toStartOf="@+id/day_of_week_2" />

    <TextView
        android:id="@+id/day_of_week_3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_day_3"
        app:layout_constraintStart_toEndOf="@+id/center" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/menubar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/res_green"
        app:elevation="0dp"
        app:itemBackground="@color/res_green"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menubar"/>

    <TextView
        android:id="@+id/textview_day_3"
        android:layout_width="83dp"
        android:layout_height="100dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="28dp"
        android:background="@color/res_green_transparent"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/center"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/day_of_week_4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_day_4"
        app:layout_constraintStart_toEndOf="@+id/day_of_week_3" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="25dp"
        android:layout_height="31dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/plan_previous_week"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
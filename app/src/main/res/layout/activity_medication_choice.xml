<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context=".MedicationChoiceActivity"
  tools:showIn="@layout/activity_medication_choice">

  <Button
    android:id="@+id/medication"
    style="@style/Widget.AppCompat.Button.Colored"
    android:layout_width="150sp"
    android:layout_height="50sp"
    android:layout_marginTop="435sp"
    android:layout_marginBottom="201sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="30sp"
    android:background="@drawable/ic_button_round"
    android:text="@string/buprenorphine"
    android:textColor="#ffffff"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/abstain"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/abstain"
    style="@style/Widget.AppCompat.Button.Colored"
    android:layout_width="150sp"
    android:layout_height="50sp"
    android:layout_marginTop="435sp"
    android:layout_marginBottom="201sp"
    android:layout_marginStart="16sp"
    android:layout_marginEnd="10sp"
    android:background="@drawable/ic_button_round"
    android:text="@string/abstain"
    android:textColor="#ffffff"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/medication"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/medication"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/textViewMed"
    android:textStyle="bold"
    android:layout_width="350sp"
    android:layout_height="150sp"
    android:layout_marginTop="102sp"
    android:layout_marginBottom="217sp"
    android:text="@string/medication_text_view"
    android:textSize="35sp"
    android:textColor="#000000"
    android:gravity="center"
    app:layout_constraintBottom_toTopOf="@+id/abstain"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>
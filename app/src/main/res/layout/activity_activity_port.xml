<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/ic_page_border">

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:layout_marginBottom="35dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:alpha=".33"
    android:contentDescription="@string/res_logo_background"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/pic"/>
  <ImageView
    android:id="@+id/teaCompletedPortrait"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-20dp"
    android:layout_marginEnd="8dp"
    android:visibility="invisible"
    app:layout_constraintEnd_toStartOf="@+id/TEA"
    app:layout_constraintTop_toTopOf="@+id/TEA"
    app:srcCompat="@mipmap/ic_activity_complete"
    android:contentDescription="teaCompleted"/>
  <ImageView
    android:id="@+id/teaIncompletePortrait"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-20dp"
    android:layout_marginEnd="8dp"
    android:visibility="invisible"
    app:layout_constraintEnd_toStartOf="@+id/TEA"
    app:layout_constraintTop_toTopOf="@+id/TEA"
    app:srcCompat="@mipmap/ic_activity_incomplete"
    android:contentDescription="teaIncomplete"/>
  <Button
    android:id="@+id/TEA"
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:layout_marginTop="220dp"
    android:layout_marginStart="75dp"
    android:background="@drawable/ic_button_rectangle"
    android:text="@string/activity_tea_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/Lesson"
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:layout_marginTop="220dp"
    android:layout_marginEnd="75dp"
    android:background="@drawable/ic_button_rectangle"
    android:text="@string/activity_lesson_button"
    app:layout_constraintBottom_toBottomOf="@+id/TEA"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/Journal"
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:layout_marginTop="75dp"
    android:layout_marginStart="75dp"
    android:background="@drawable/ic_button_rectangle"
    android:text="@string/activity_journal_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/TEA"/>
  <Button
    android:id="@+id/Edu."
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:layout_marginTop="75dp"
    android:layout_marginEnd="75dp"
    android:background="@drawable/ic_button_rectangle"
    android:text="@string/activity_edu_button"
    app:layout_constraintBottom_toBottomOf="@+id/Journal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Lesson"/>
  <Button
    android:id="@+id/DailyWellness"
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:layout_marginTop="75dp"
    android:layout_marginStart="75dp"
    android:background="@drawable/ic_button_rectangle"
    android:text="@string/activity_daily_wellness_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Journal"/>
  <Button
    android:id="@+id/CleanTracker"
    android:layout_width="100dp"
    android:layout_height="70dp"
    android:layout_marginTop="75dp"
    android:layout_marginEnd="75dp"
    android:background="@drawable/ic_button_rectangle"
    android:text="@string/activity_clean_tracker_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Edu."/>
  <TextView
    android:id="@+id/textViewActivityPage"
    android:layout_width="230dp"
    android:layout_height="55dp"
    android:layout_marginTop="100dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center"
    android:text="@string/activity_title_activity_screen"
    android:textSize="45sp"
    android:textColor="#555555"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <android.support.design.widget.BottomNavigationView
    android:id="@+id/menubar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/res_green"
    app:elevation="0dp"
    app:itemBackground="@color/res_green"
    app:itemHorizontalTranslationEnabled="false"
    app:itemIconTint="@android:color/black"
    app:itemTextColor="@android:color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:menu="@menu/core_navigation"/>
</android.support.constraint.ConstraintLayout>
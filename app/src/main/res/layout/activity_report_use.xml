<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ReportUseActivity">

  <TextView
    android:id="@+id/report_use_question"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:text="@string/report_use_question"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
    android:textColor="@android:color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <android.support.design.widget.BottomNavigationView
    android:id="@+id/menubar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/colorRESLogoGreen"
    app:elevation="0dp"
    app:itemBackground="@color/colorRESLogoGreen"
    app:itemHorizontalTranslationEnabled="false"
    app:itemIconTint="@android:color/black"
    app:itemTextColor="@android:color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:menu="@menu/menubar"/>
  <Button
    android:id="@+id/report_use_yes"
    style="@style/Widget.AppCompat.Button.Colored"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorRESLogoGreen"
    android:text="@string/button_yes"
    android:textColor="@android:color/black"
    tools:layout_editor_absoluteX="88dp"
    tools:layout_editor_absoluteY="222dp"/>
  <Button
    android:id="@+id/report_use_no"
    style="@style/Widget.AppCompat.Button.Colored"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="84dp"
    android:background="@color/colorRESLogoGreen"
    android:text="@string/button_no"
    android:textColor="@android:color/black"
    app:layout_constraintEnd_toEndOf="parent"
    tools:layout_editor_absoluteY="222dp"/>

</android.support.constraint.ConstraintLayout>
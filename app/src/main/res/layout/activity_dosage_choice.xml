<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Spinner
    android:id="@+id/dosage_spinner"
    android:layout_width="396dp"
    android:layout_height="55dp"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="437dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:entries="@array/dosage_screen_title"
    android:spinnerMode="dropdown"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/dosage_message"/>
  <TextView
    android:id="@+id/dosage_message"
    android:layout_width="wrap_content"
    android:layout_height="177dp"
    android:layout_marginTop="125dp"
    android:layout_marginBottom="50dp"
    android:gravity="center"
    android:text="@string/dosage_message_intro"
    android:textSize="35sp"
    app:layout_constraintBottom_toTopOf="@+id/dosage_spinner"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
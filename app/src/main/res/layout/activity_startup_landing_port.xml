<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".StartupLandingActivity"
  android:background="@drawable/ic_page_border">

  <ImageView
    android:id="@+id/resBackground"
    android:layout_width="390dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="150dp"
    android:layout_marginBottom="160dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:alpha=".33"
    android:contentDescription="@string/dosage_choice_res_logo"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.428"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.423"
    app:srcCompat="@drawable/pic"/>
  <TextView
    android:id="@+id/startup_landing_text"
    android:textStyle="bold"
    android:layout_width="294dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="280dp"
    android:text="@string/activity_startup_landing"
    android:textAlignment="center"
    android:textColor="@android:color/black"
    android:textSize="45sp"
    app:layout_constraintBottom_toBottomOf="@+id/resBackground"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.495"
    app:layout_constraintStart_toStartOf="parent"
    />
  <Button
    android:id="@+id/start_landing_button_create"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_button_rectangle"
    android:text="@string/activity_startup_create"
    android:textColor="@android:color/black"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/resBackground"/>

</android.support.constraint.ConstraintLayout>
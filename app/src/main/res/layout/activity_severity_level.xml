<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">


  <LinearLayout

    android:layout_width="0dp"
    android:layout_height="734dp"
    android:padding="10dp"

    android:background="#FFA500"
    android:orientation="horizontal"
    app:layout_constraintBaseline_toBaselineOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:context="com.example.layoutborder.MainActivity">

    <TextView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="#FFFFFF"
      android:gravity="center_vertical|center_horizontal"
      android:textSize="40sp"/>

  </LinearLayout>


  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="30"
    android:layout_marginTop="-200dp"
    android:padding="30dp"

    android:alpha=".4"
    android:contentDescription="@string/severity_desc"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/pic"
    />


  <TableLayout
    android:id="@+id/tableLayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">


    <TableRow>

      <TextView
        android:layout_width="365dp"

        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_column="1"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:text="@string/severity_total"

        android:textColor="#009933"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"/>

      <EditText
        android:id="@+id/totalScore_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-255dp"
        android:layout_marginRight="56dp"
        android:hint="@string/severity_current"
        android:inputType="text"
        android:width="600dp"
        tools:ignore="autoFill"/>
    </TableRow>

    <TableRow>

      <TextView
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_column="1"
        android:gravity="left"
        android:text="@string/severity_specifier"

        android:textColor="#009933"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"/>

      <EditText
        android:id="@+id/specifier_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-255dp"
        android:layout_marginRight="56dp"
        android:hint="@string/severity_username"
        android:inputType="none"
        android:width="600dp"
        tools:ignore="autoFill"/>
    </TableRow>


  </TableLayout>

  <TableLayout

    android:id="@+id/tableLayout"
    android:layout_width="0dp"
    android:layout_height="700dp"
    android:layout_marginBottom="31dp"
    android:stretchColumns="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <TableRow>

      <TextView
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_column="1"
        android:padding="5dip"
        android:text=""/>

      <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        android:layout_column="1"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:gravity="left"
        android:text="@string/severity_current"
        android:textColor="#FF9900"

        android:textSize="20sp"


        />

    </TableRow>

    <View
      android:layout_height="2dip"
      android:background="#FFA500"/>


    <TableRow>

      <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_column="1"
        android:padding="3dip"
        android:gravity="left"
        android:text="@string/severity_mild"
        android:textColor="#FF9900"/>

      <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="3dip"
        android:gravity="right"
        android:text="@string/severity_mild_symptoms"
        android:textColor="#FF9900"/>
    </TableRow>

    <TableRow>

      <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_column="1"
        android:padding="3dip"
        android:gravity="left"
        android:text="@string/severity_moderate"
        android:textColor="#FF9900"/>

      <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_column="1"
        android:padding="3dip"
        android:gravity="right"
        android:text="@string/severity_moderate_symptoms"

        android:textColor="#FF9900"/>
    </TableRow>

    <TableRow>

      <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_column="1"
        android:padding="3dip"
        android:alpha="100"
        android:gravity="left"
        android:text="@string/severity_severe"
        android:textColor="#FFA500"/>

      <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_column="1"
        android:padding="3dip"
        android:gravity="right"

        android:text="@string/severity_severe_symptoms"
        android:textColor="#FF9900"/>
    </TableRow>


  </TableLayout>

  <Button
    android:id="@+id/TPButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="#00FA9A"
    android:text="@string/severity_plan"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/tableLayout2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/tableLayout"
    app:layout_constraintVertical_bias="0.965"/>

</android.support.constraint.ConstraintLayout>


        android:id="@+id/textViewfour"

        android:layout_width="288dp"

        android:layout_height="57dp"

        android:layout_marginTop="8dp"

        android:layout_marginBottom="296dp"

        android:layout_marginStart="8dp"

        android:layout_marginEnd="8dp"


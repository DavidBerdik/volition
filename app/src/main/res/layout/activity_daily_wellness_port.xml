<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".DailyWellnessActivity">

  <ImageView
    android:id="@+id/imageView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="150dp"
    android:layout_marginBottom="160dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:alpha=".33"
    android:contentDescription="@string/dosage_choice_res_logo"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.569"
    app:srcCompat="@drawable/pic"/>
  <android.support.design.widget.BottomNavigationView
    android:id="@+id/activity_back_navigation"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/res_green"
    app:elevation="0dp"
    app:itemBackground="@color/res_green"
    app:itemHorizontalTranslationEnabled="false"
    app:itemIconTint="@android:color/black"
    app:itemTextColor="@android:color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:menu="@menu/activity_back_navigation"/>
  <TextView
    android:id="@+id/daily_wellness_question"
    android:textStyle="bold"
    android:layout_width="364dp"
    android:layout_height="72dp"
    android:layout_marginTop="14dp"
    android:text="@string/daily_wellness_question"
    android:textAlignment="center"
    android:textColor="@color/text_regular"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/daily_wellness_title"/>
  <TextView
    android:id="@+id/daily_wellness_title"
    android:textStyle="bold"
    android:layout_width="322dp"
    android:layout_height="109dp"
    android:layout_marginTop="48dp"
    android:text="@string/daily_wellness_title"
    android:textAlignment="center"
    android:textColor="@android:color/black"
    android:textSize="45sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <NumberPicker
    android:id="@+id/daily_wellness_number_picker"
    android:layout_width="143dp"
    android:layout_height="135dp"
    android:layout_marginTop="55dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/daily_wellness_title"/>
  <TextView
    android:id="@+id/daily_wellness_results"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="128dp"
    android:text="@string/daily_wellness_rating"
    android:textColor="@color/text_regular"
    android:textSize="35sp"
    app:layout_constraintBottom_toTopOf="@+id/activity_back_navigation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"/>
  <Button
    android:id="@+id/daily_wellness_button"
    style="@style/Widget.AppCompat.Button"
    android:layout_width="88dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/ic_button_rectangle"
    android:text="@string/daily_wellness_submit_button"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/daily_wellness_results"/>
</android.support.constraint.ConstraintLayout>